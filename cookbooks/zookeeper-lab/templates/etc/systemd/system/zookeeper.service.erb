[Unit]
Description=Apache Zookeeper server 
Documentation=http://zookeeper.apache.org
Requires=network.target remote-fs.target 
After=network.target remote-fs.target

[Service]
Type=forking
User=zookeeper
Group=zookeeper
ExecStart=/opt/zookeeper-<%= @zookeeper_version %>/bin/zkServer.sh start
ExecStop=/opt/zookeeper-<%= @zookeeper_version %>/bin/zkServer.sh stop
ExecReload=/opt/zookeeper-<%= @zookeeper_version %>/bin/zkServer.sh restart
WorkingDirectory=<%= @data_dir %>

[Install]
WantedBy=multi-user.target
